<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.victor.stocknfc.fragmetos.Fragmento_ControlStock">

    <!-- TODO: Update blank fragment layout -->
    <TextView
        android:id="@+id/infoControlStock"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/infoControlStock"
        android:textAlignment="center"
        android:textSize="24dp"
        android:layout_marginTop="15dp"/>

    <EditText
        android:id="@+id/numeroControlStock"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/infoControlStock"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"
        android:gravity="center"
        android:inputType="number"
        android:hint="Num"
        android:maxLines="1"
        android:textSize="50dp"
        android:text="1"/>

    <SeekBar
        android:id="@+id/barra"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/numeroControlStock"
        android:layout_marginTop="40dp"
        android:max="100"
        />
    <android.support.design.widget.FloatingActionButton
        android:id="@+id/btnLeerArticuloNFC"
        android:layout_width="65dp"
        android:layout_height="65dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_gravity="bottom|right|end"
        android:layout_marginBottom="15dp"
        android:layout_marginEnd="15dp"
        android:src="@drawable/nfc" />

</RelativeLayout>
